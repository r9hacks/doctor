<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.doctor.Activitys.AboutUsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueActionBarColor"
        style="@style/AppTheme.Toolbar"
        android:id="@+id/mytoolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="43dp"
        app:srcCompat="@mipmap/mhealth"
        android:layout_below="@+id/mytoolbar"
        android:layout_centerHorizontal="true" />

    <view
        android:id="@+id/view"
        class="android.support.v7.widget.Toolbar"
        layout_width="match_parent"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView18"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="29dp"
        android:text="Our aim is to improve public health, by facilitating doctor-patient communications. The application allows doctors to ubiquity access patient's information, view reports and reply to comments instantly and accurately. As well as accept or decline patients requests."
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Becausewecare"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView18"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/imageView18"
        android:layout_toStartOf="@+id/imageView18"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/Aboutus"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />




</RelativeLayout>
