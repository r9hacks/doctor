<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.doctor.Activitys.SettingsActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueActionBarColor"
        style="@style/AppTheme.Toolbar"
        android:id="@+id/mytoolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.Toolbar>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout4"
    android:layout_above="@+id/imageView17"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="38dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:weightSum="1">


    <Button
        android:id="@+id/buttonArabic"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout4"
        android:layout_marginTop="19dp"
        android:background="@color/colorAccent"
        android:text="العربية"
        android:textColor="@color/TapIconColor"
        android:textSize="25dp"
        android:layout_weight="0.37" />

    <Button
        android:id="@+id/buttonEnglish"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonArabic"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorAccent"
        android:text="English"
        android:textColor="@color/TapIconColor"
        android:textSize="25dp"
        android:layout_weight="0.29" />


</LinearLayout>
    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/international_languages"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtChooseLang"
        android:layout_alignEnd="@+id/txtChooseLang"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <EditText
        android:id="@+id/txtChooseLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Choose language"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>
