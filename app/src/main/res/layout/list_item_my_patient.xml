<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="0.5dp"
        app:civ_border_color="@color/ImageBoarderColor"
        android:id="@+id/imageViewPatient"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewPatient"
        android:layout_toRightOf="@+id/imageViewPatient"
        android:text="@string/PatientName"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"

        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/textViewName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageViewPatient"
        android:layout_toEndOf="@+id/imageViewPatient"
        android:id="@+id/linearLayout7">

        <ImageView
            android:id="@+id/calender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            app:srcCompat="@mipmap/valentines_icon" />

        <TextView
            android:id="@+id/BDay"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.60"
            android:text="Birthdate" />

        <ImageView
            android:id="@+id/bloodtypeimg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            app:srcCompat="@mipmap/transfusion_icon" />

        <TextView
            android:id="@+id/BloodType"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.25"
            android:text="BloodType" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/imageViewPatient"
        android:layout_toEndOf="@+id/imageViewPatient"
        android:layout_toRightOf="@+id/imageViewPatient"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout7">


        <ImageView
            android:id="@+id/PhoneImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"
            app:srcCompat="@mipmap/telephone_icon" />

        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.6"
            android:text="Phone" />


        <ImageView
            android:id="@+id/Gender"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.1"

            app:srcCompat="@mipmap/gendersss_icon" />


        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_weight=".25"
            android:text="Gender" />
    </LinearLayout>

