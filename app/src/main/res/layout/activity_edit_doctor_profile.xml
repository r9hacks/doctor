<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pifss.doctor.Activitys.EditDoctorProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/myToolbar"
            style="@style/AppTheme.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueActionBarColor"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appBarLayout"
        android:layout_above="@+id/btnEdit"
        android:scrollbars="vertical"
        android:id="@+id/scrollView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutCivil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/LocationPLayout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/txtDrCivil"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_marginBottom="37dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:drawableLeft="@mipmap/id_card"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Civil ID"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                >

                <EditText
                    android:id="@+id/txtDrName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:drawableLeft="@mipmap/doctor"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textInputLayoutName"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                >

                <EditText
                    android:id="@+id/txtDrEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textInputLayoutName"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:drawableLeft="@mipmap/email"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textInputLayoutEmail"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                >

                <EditText
                    android:id="@+id/txtDrPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:drawableLeft="@mipmap/password"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/LocationPLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textInputLayoutPass"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                >

                <EditText
                    android:id="@+id/txtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/civilPLayout"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="74dp"
                    android:drawableLeft="@mipmap/map"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Location"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/NarionalityIL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/LocationPLayout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="54dp"

                >

                <EditText
                    android:id="@+id/txtNationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="74dp"
                    android:drawableLeft="@mipmap/maps_and_flags"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Nationality"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Specialty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/NarionalityIL"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                >

                <EditText
                    android:id="@+id/txtSpecialty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="74dp"
                    android:drawableLeft="@mipmap/stethoscope_profile"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Specialty"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Specialty"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                >

                <EditText
                    android:id="@+id/txtBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="74dp"
                    android:drawableLeft="@mipmap/calendar_prof"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Birthdate"
                    android:textColor="@android:color/darker_gray" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/GenderRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Birthdate"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="17dp"
                android:weightSum="1"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:scaleType="fitXY"
                    android:layout_weight="1"
                    android:paddingLeft="16dp"
                    app:srcCompat="@mipmap/genders" />






                    <!--<ImageView-->
                        <!--android:id="@+id/imgBtnMale"-->
                        <!--android:layout_width="25dp"-->
                        <!--android:layout_height="25dp"-->
                        <!--android:layout_below="@+id/textView17"-->
                        <!--android:layout_marginLeft="30dp"-->
                        <!--android:layout_marginStart="30dp"-->
                        <!--android:layout_toEndOf="@+id/imageView8"-->
                        <!--android:layout_toRightOf="@+id/imageView8"-->
                        <!--android:layout_weight="0.45"-->
                        <!--android:backgroundTint="@android:color/transparent"-->
                        <!--app:srcCompat="@mipmap/male_symbol" />-->

                    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroupGender"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        >

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/textView17"
                            android:layout_toEndOf="@+id/imgBtnMale"
                            android:layout_toRightOf="@+id/imgBtnMale"
                            android:layout_weight="0.1"
                            android:text="Male" />

                        <!--<ImageView-->
                        <!--android:id="@+id/imgBtnFemale"-->
                        <!--android:layout_width="25dp"-->
                        <!--android:layout_height="25dp"-->
                        <!--android:layout_below="@+id/textView17"-->
                        <!--android:layout_toEndOf="@+id/radioMale"-->

                        <!--android:layout_toRightOf="@+id/radioMale"-->
                        <!--android:layout_weight="0.63"-->
                        <!--android:backgroundTint="@android:color/transparent"-->
                        <!--app:srcCompat="@mipmap/femenine" />-->

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="Female"
                        android:layout_below="@+id/textView17"
                        android:layout_toEndOf="@+id/imgBtnFemale"
                        android:layout_toRightOf="@+id/imgBtnFemale"
                        android:layout_weight="0.1" />
                    </RadioGroup>


            </LinearLayout>
            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Gender"
                android:textSize="13sp"
                android:layout_below="@+id/Birthdate"
                android:layout_alignLeft="@+id/view6"
                android:layout_alignStart="@+id/view6"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" />

            <view
                android:id="@+id/view6"
                class="android.support.v7.widget.Toolbar"
                layout_width="match_parent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/GenderRL"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:background="@android:color/black"
                android:textColor="@android:color/darker_gray"

                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/GenderRL"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"

                >

                <EditText
                    android:id="@+id/txtBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@mipmap/info"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Extra info.."
                    android:textColor="@android:color/darker_gray" />


            </android.support.design.widget.TextInputLayout>




        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEdit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.75"
        android:background="@color/colorAccent"
        android:text="Save"
        android:textSize="23sp"
        android:textStyle="bold" />

</RelativeLayout>