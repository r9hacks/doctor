<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.doctor.Navigation">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueActionBarColor"
        style="@style/AppTheme.Toolbar"
        android:id="@+id/mytoolbar">

    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myViewPager"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/mytabLayout"></android.support.v4.view.ViewPager>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mytabLayout"
        android:layout_below="@+id/mytoolbar"
        android:layout_alignParentLeft="true"
        android:background="@color/blueActionBarColor"
        app:tabSelectedTextColor="@color/TapSelectedColor"
        app:tabTextColor="@color/TapNotSelectedColor"
        android:layout_alignParentStart="true">

    </android.support.design.widget.TabLayout>
</RelativeLayout>
