<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pifss.doctor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mhealth"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mhealth"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >
        <activity android:name="com.pifss.doctor.Activitys.MainActivity" />
        <activity android:name="com.pifss.doctor.Activitys.HomeReportActivity" />
        <activity
            android:name="com.pifss.doctor.Activitys.RegisterActivity"
            android:exported="true" />
        <activity android:name="com.pifss.doctor.Activitys.loginActivity" />
        <activity android:name="com.pifss.doctor.Activitys.AboutUsActivity" />
        <activity android:name="com.pifss.doctor.Activitys.DoctorProfileActivity" />
        <activity android:name="com.pifss.doctor.Activitys.MyPatientActivity" />
        <activity android:name="com.pifss.doctor.Activitys.PatientRequestActivity" />
        <activity android:name="com.pifss.doctor.Activitys.SettingsActivity" />
        <activity android:name="com.pifss.doctor.Activitys.PatientProfileActivity" />
        <activity android:name="com.pifss.doctor.Activitys.ReportDetailActivity" />
        <activity android:name="com.pifss.doctor.Activitys.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pifss.doctor.Activitys.ForgetPasswordActivity" />
        <activity android:name="com.pifss.doctor.Activitys.EditDoctorProfileActivity" />
        <activity android:name="com.pifss.doctor.Activitys.ReplyReportActivity" />
        <activity android:name="com.pifss.doctor.Activitys.ReplyConfirmActivity" />
        <activity android:name="com.pifss.doctor.Activitys.NewBloodRequestActivity" />
        <activity android:name="com.pifss.doctor.Activitys.MyBloodRequestsActivity" />
    </application>

</manifest>